<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

  <LinearLayout
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:onClick="onClick"
        android:orientation="horizontal"
        android:padding="10dp" >

        <!--
        <ImageView        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:gravity="center"
        android:src="@drawable/maincomeback"
        />
        -->

        <TextView
            android:id="@+id/tx1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/maincomeback"
            android:gravity="center"
            android:text="返回"
            android:textColor="#ff9600" />
    </LinearLayout>
    
<RelativeLayout 
      android:id="@+id/relativeLayout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:layout_marginRight="27dp"
      android:layout_marginLeft="27dp"
    >
   <!--  android:layout_below="@+id/back"
   		 -->
    <TextView
      android:id="@+id/textView1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"      
      android:layout_marginRight="27dp"
      android:layout_marginTop="35dp"
      android:text="设备ID:" />

  <TextView
      android:id="@+id/textView2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@+id/textView1"
      android:layout_below="@+id/textView1"
      android:layout_marginTop="29dp"
      android:text="设备型号:" />
  
    <TextView
      android:id="@+id/textView3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@+id/textView1"
      android:layout_below="@+id/textView2"
      android:layout_marginTop="29dp"
      android:text="设备IP:" />
        <TextView
      android:id="@+id/textView4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@+id/textView1"
      android:layout_below="@+id/textView3"
      android:layout_marginTop="29dp"
      android:text="设备PORT:" />

  

  <EditText
      android:id="@+id/inputDeviceType"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBaseline="@+id/textView2"
      android:layout_alignBottom="@+id/textView2"
      android:layout_toRightOf="@+id/textView1"
      android:ems="20"
      android:hint="请输入设备型号" />

  <EditText
      android:id="@+id/inputDeviceId"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBaseline="@+id/textView1"
      android:layout_alignBottom="@+id/textView1"
      android:layout_alignLeft="@+id/inputDeviceType"
      android:ems="20"
      android:hint="请输入设备ID" />
    <EditText
      android:id="@+id/inputDeviceIp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBaseline="@+id/textView3"
      android:layout_alignBottom="@+id/textView3"
      android:layout_alignLeft="@+id/inputDeviceType"
      android:ems="20"
      android:hint="请输入设备IP" />
      <EditText
      android:id="@+id/inputDevicePort"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBaseline="@+id/textView4"
      android:layout_alignBottom="@+id/textView4"
      android:layout_alignLeft="@+id/inputDeviceType"
      android:ems="20"
      android:hint="请输入设备ID" />
      <Button
      android:id="@+id/saveConfig"
      android:layout_width="200dp"
      android:layout_height="wrap_content"
      android:layout_below="@+id/inputDevicePort"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="42dp"
      android:padding="20dp"
      android:text="保存配置" />
      
      <Button
      android:id="@+id/activeCheck"
      android:layout_width="200dp"
      android:layout_height="wrap_content"
      android:layout_below="@+id/saveConfig"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="20dp"
      android:padding="20dp"
      android:text="激活自检功能" />
    
</RelativeLayout>
  

</RelativeLayout>
